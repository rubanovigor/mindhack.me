<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#00000000"    >

    <ImageView android:id="@+id/CustomToast_ivAtt"
        android:src="@drawable/service_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="15dp"/>

    <TextView android:id="@+id/CustomToast_TextAtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text=""
        android:textSize="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"      />


    <ImageView
        android:id="@+id/CustomToast_ivMed"
        android:src="@drawable/ball_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/CustomToast_ivAtt"
        android:layout_alignParentTop="true" />

    <TextView android:id="@+id/CustomToast_TextMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text=""
        android:textSize="10dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/CustomToast_ivAtt"
           />


</RelativeLayout>